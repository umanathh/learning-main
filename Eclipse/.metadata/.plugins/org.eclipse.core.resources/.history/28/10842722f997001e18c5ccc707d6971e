package piramids;

import java.util.Iterator;

public class NumberPramidAssecnding {
	
	public static void main(String []args)
	{
		int num = 0;
		for(int i = 1;i<+20  ;i++)
		{
			
			for (int j =0 ; j<= i; j++)
			{
				
				System.out.print("  " +num++);
		
				
			}
			System.out.println("");
			
		}
	}

}
